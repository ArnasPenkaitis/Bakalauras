<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ThemeButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:background">@drawable/theme_button</item>
        <item name="android:textColor">@color/colorDarkWhite</item>
        <item name="android:textAllCaps">true</item>'
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:elevation">10dp</item>
    </style>
</resources>
